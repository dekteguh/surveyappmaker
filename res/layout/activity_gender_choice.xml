<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/text_bkgrd"
    android:orientation="vertical"
    android:padding="0dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Gender_choice" >

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_margin="0dp"
        android:layout_weight="5"
        android:gravity="center"
        android:padding="0dp" >

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:layout_weight="1.0"
            android:gravity="bottom"
            android:padding="25dp" >

            <ImageView
                android:id="@+id/female_button"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:contentDescription="@string/female_desc"
                android:padding="0dp"
                android:src="@drawable/female" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:layout_weight="1.0"
            android:gravity="bottom"
            android:padding="25dp" >

            <ImageView
                android:id="@+id/male_button"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:contentDescription="@string/male_desc"
                android:padding="0dp"
                android:src="@drawable/male" />
        </FrameLayout>
    </TableRow>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_margin="0dp"
        android:layout_weight="1"
        android:background="@color/ulp_bkgrd"
        android:padding="0dp" >

        <ImageView
            android:id="@+id/ulp_icon_link"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:contentDescription="@string/ulp_icon_desc"
            android:padding="15dp"
            android:src="@drawable/ulpicon" />
    </FrameLayout>

</LinearLayout>