<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:layout_gravity="bottom"
    android:background="@color/text_bkgrd"
    android:orientation="vertical"
    android:padding="0dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Survey" >

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.50"
        android:background="@color/menu_green_a"
        android:gravity="center"
        android:padding="3dp" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="2dp"
            android:text="@string/origin_esp"
            android:textColor="@color/text_green_a"
            android:textSize="13sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="2dp"
            android:text="@string/origin_eng"
            android:textColor="@color/text_green_a"
            android:textSize="13sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="2dp"
            android:text="@string/destination_esp"
            android:textColor="@color/text_green_a"
            android:textSize="13sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="2dp"
            android:text="@string/destination_eng"
            android:textColor="@color/text_green_a"
            android:textSize="13sp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:background="@color/menu_green_b"
        android:gravity="center"
        android:padding="3dp" >

        <AutoCompleteTextView
            android:id="@+id/Origin_autocomplete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:ems="10"
            android:text="Auto"
            android:textColor="@color/text_green_b" >

            <requestFocus />
        </AutoCompleteTextView>

        <AutoCompleteTextView
            android:id="@+id/Destination_autocomplete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:ems="10"
            android:text="Complete"
            android:textColor="@color/text_green_b" >

            <requestFocus />
        </AutoCompleteTextView>
    </TableRow>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.75"
        android:padding="3dp" >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:padding="0dp" >

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:padding="0dp" >

                <ImageView
                    android:id="@+id/question_1_b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:contentDescription="@string/ulp_icon_desc"
                    android:padding="0dp"
                    android:src="@drawable/question_1" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:padding="0dp" >

                <ImageView
                    android:id="@+id/question_2_b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:contentDescription="@string/ulp_icon_desc"
                    android:padding="0dp"
                    android:src="@drawable/question_2" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:padding="0dp" >

                <ImageView
                    android:id="@+id/question__3_b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:contentDescription="@string/ulp_icon_desc"
                    android:padding="0dp"
                    android:src="@drawable/question_3" />
            </FrameLayout>
        </TableRow>

        <TableRow android:layout_weight="1.0" >

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:padding="0dp" >

                <ImageView
                    android:id="@+id/question_4_b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:contentDescription="@string/ulp_icon_desc"
                    android:padding="0dp"
                    android:src="@drawable/question_4" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:padding="0dp" >

                <ImageView
                    android:id="@+id/question_5_b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:contentDescription="@string/ulp_icon_desc"
                    android:padding="0dp"
                    android:src="@drawable/question_5" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:padding="0dp" >

                <ImageView
                    android:id="@+id/question_6_b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:contentDescription="@string/ulp_icon_desc"
                    android:padding="0dp"
                    android:src="@drawable/question_6" />
            </FrameLayout>
        </TableRow>

        <TableRow android:layout_weight="1.0" >

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:padding="0dp" >

                <ImageView
                    android:id="@+id/question_7_b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:contentDescription="@string/ulp_icon_desc"
                    android:padding="0dp"
                    android:src="@drawable/question_7" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:padding="0dp" >

                <ImageView
                    android:id="@+id/question_8_b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:contentDescription="@string/ulp_icon_desc"
                    android:padding="0dp"
                    android:src="@drawable/question_8" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:padding="0dp" >

                <ImageView
                    android:id="@+id/question_9_b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:contentDescription="@string/ulp_icon_desc"
                    android:padding="0dp"
                    android:src="@drawable/question_9" />
            </FrameLayout>
        </TableRow>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:padding="0dp" >

            <ImageView
                android:id="@+id/question_10_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:contentDescription="@string/ulp_icon_desc"
                android:padding="0dp"
                android:src="@drawable/question_10" />
        </FrameLayout>
    </TableLayout>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:background="@color/menu_green_a"
        android:gravity="center"
        android:padding="3dp" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="2dp"
            android:text="@string/upload_surv_esp"
            android:textColor="@color/text_green_a"
            android:textSize="13sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="2dp"
            android:text="@string/upload_surv_eng"
            android:textColor="@color/text_green_a"
            android:textSize="13sp" />
    </TableRow>



        <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.75"
        android:background="@color/menu_green_b"
        android:gravity="center"
        android:padding="3dp" >

            <ImageView
                android:id="@+id/upload_survey_b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:contentDescription="@string/ulp_icon_desc"
                android:padding="0dp"
                android:src="@drawable/upload_icon" />
        </FrameLayout>


    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_margin="0dp"
        android:layout_weight="1.0"
        android:background="@color/ulp_bkgrd"
        android:padding="0dp" >

        <ImageView
            android:id="@+id/ulp_icon_link"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:contentDescription="@string/ulp_icon_desc"
            android:padding="15dp"
            android:src="@drawable/ulpicon" />
    </FrameLayout>

</LinearLayout>