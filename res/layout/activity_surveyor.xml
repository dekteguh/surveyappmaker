<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/chapter_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_background" >



    <LinearLayout
        android:id="@+id/surveyor_all"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <FrameLayout
            android:id="@+id/surveyor_frame"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="5" >
        </FrameLayout>
		
        <fragment
            android:id="@+id/survey_question_navigator_fragment"
            android:name="org.urbanlaunchpad.flocktracker.Question_navigator_fragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            tools:layout="@layout/fragment_question_buttons"
            android:layout_weight="1" />
    </LinearLayout>

    <ListView
        android:id="@+id/chapter_drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/blue_drawer"
        android:choiceMode="singleChoice"
        android:divider="@color/text_color_light"
        android:dividerHeight="1dp" />

</android.support.v4.widget.DrawerLayout>