<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:layout_gravity="bottom"
    android:background="@drawable/map_light"
    android:orientation="vertical"
    android:padding="0dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Trip_started" >

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_margin="0dp"
        android:layout_weight="1.5"
        android:padding="0dp" >

        <ImageView
            android:id="@+id/stop_trip"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:contentDescription="@string/stop_trip_bus_desc"
            android:padding="5dp"
            android:src="@drawable/stop_trip_bus" />
    </FrameLayout>

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_margin="0dp"
        android:layout_weight="3.5"
        android:background="@color/ulp_bkgrd"
        android:gravity="top"
        android:padding="0dp" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:background="@color/menu_green_a"
            android:padding="0dp" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:padding="15dp"
                android:text="@string/stop_trip_esp"
                android:textColor="@color/text_green_a"
                android:textSize="15sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="15dp"
                android:text="@string/stop_trip_eng"
                android:textColor="@color/text_green_a"
                android:textSize="15sp" />
        </TableRow>
        

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:background="@color/menu_green_b"
            android:padding="0dp" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="2dp"
                android:text="@string/passengers_esp"
                android:textColor="@color/text_green_b"
                android:textSize="15sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="2dp"
                android:text="@string/trip_duration_esp"
                android:textColor="@color/text_green_b"
                android:textSize="15sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="2dp"
                android:text="@string/surveys_esp"
                android:textColor="@color/text_green_b"
                android:textSize="15sp" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/menu_green_b"
            android:gravity="left"
            android:padding="0dp" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="2dp"
                android:text="@string/passengers_eng"
                android:textColor="@color/text_green_b"
                android:textSize="15sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="2dp"
                android:text="@string/trip_duration_eng"
                android:textColor="@color/text_green_b"
                android:textSize="15sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="2dp"
                android:text="@string/surveys_eng"
                android:textColor="@color/text_green_b"
                android:textSize="15sp" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:padding="0dp"
            android:background="@color/ulp_bkgrd" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/passenger_count"
                android:textColor="@color/text_color_dark"
                android:textSize="15sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/trip_time"
                android:textColor="@color/text_color_dark"
                android:textSize="15sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/survey_count"
                android:textColor="@color/text_color_dark"
                android:textSize="15sp" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow5"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="0dp"
            android:background="@drawable/menu_1"
             >

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:layout_weight="1.0"
                android:gravity="bottom"
                android:padding="25dp" >

                <ImageView
                    android:id="@+id/passenger_button"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:contentDescription="@string/passenger_button_desc"
                    android:padding="0dp"
                    android:src="@drawable/passenger_icon" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:layout_weight="1.0"
                android:padding="0dp" >

                <ImageView
                    android:id="@+id/flock_pin_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:contentDescription="@string/flock_pin_desc"
                    android:padding="20dp"
                    android:src="@drawable/flock_pin" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:layout_weight="1.0"
                android:gravity="bottom"
                android:padding="25dp" >

                <ImageView
                    android:id="@+id/survey_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:contentDescription="@string/survey_button_desc"
                    android:padding="0dp"
                    android:src="@drawable/survey_icon" />
            </FrameLayout>
        </TableRow>
    </TableLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_margin="0dp"
        android:layout_weight="1.0"
        android:background="@color/ulp_bkgrd"
        android:padding="0dp" >

        <ImageView
            android:id="@+id/ulp_icon_link"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:contentDescription="@string/ulp_icon_desc"
            android:padding="15dp"
            android:src="@drawable/ulpicon" />

    </FrameLayout>

</LinearLayout>