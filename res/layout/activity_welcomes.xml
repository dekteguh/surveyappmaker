<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/welcome"
    android:orientation="vertical"

    android:padding="0dp"
    tools:context=".Welcomes" >

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_margin="0dp"
            android:layout_weight="6"
            android:padding="0dp" >

            <ImageView
                android:id="@+id/app_big_icon_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:contentDescription="@string/app_big_icon_desc"
                android:padding="40dp"
                android:src="@drawable/ft_big_icon" />
        </FrameLayout>

    <LinearLayout
        android:baselineAligned="false"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1" >

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:padding="0dp" >

            <ImageView
                android:id="@+id/mobility_futures_colaborative_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:contentDescription="@string/mobility_futures_colaborative_desc"
                android:padding="0dp"
                android:src="@drawable/mobility_futures_colaborative" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:padding="0dp" >

            <ImageView
                android:id="@+id/mit_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:contentDescription="@string/mit_desc"
                android:padding="0dp"
                android:src="@drawable/mit" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:padding="0dp" >

            <ImageView
                android:id="@+id/urban_launchpad_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:contentDescription="@string/urban_launchpad_desc"
                android:padding="0dp"
                android:src="@drawable/urban_launchpad_mx" />
        </FrameLayout>
    </LinearLayout>

</LinearLayout>